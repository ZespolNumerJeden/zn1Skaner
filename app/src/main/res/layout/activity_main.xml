<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/logotyp_layout"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="0.25"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/data_layout"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:visibility="visible"
                android:src="@drawable/logo" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/data_layout"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="0.35"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/user_data_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_weight="0.25"
                android:gravity="center"
                android:text="@string/user_data_label"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textIsSelectable="false" />

            <TextView
                android:id="@+id/scan_format"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_data_label"
                android:layout_centerHorizontal="true"
                android:layout_weight="0.25"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textIsSelectable="true" />

            <TextView
                android:id="@+id/scan_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/scan_format"
                android:layout_centerHorizontal="true"
                android:layout_weight="0.25"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textIsSelectable="true" />

            <TextView
                android:id="@+id/time_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/scan_content"
                android:layout_centerHorizontal="true"
                android:layout_weight="0.25"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textIsSelectable="true" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/afterScan_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:orientation="horizontal"
            android:visibility="invisible"
            android:layout_above="@+id/footer">

            <Button
                android:id="@+id/cancel_button"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_weight="0.4"
                android:background="@drawable/cancel_button_border"
                android:onClick="onClick"
                android:text="@string/cancel" />

            <Button
                android:id="@+id/approve_button"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_weight="0.4"
                android:background="@drawable/button_border"
                android:text="@string/accept" />

        </LinearLayout>

        <Button
            android:id="@+id/scan_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_weight="0.6"
            android:background="@drawable/button_border"
            android:onClick="onClick"
            android:text="@string/scan"
            android:layout_above="@+id/footer"/>

        <TextView
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_weight="0.4"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_alignParentBottom="true" />

</RelativeLayout>